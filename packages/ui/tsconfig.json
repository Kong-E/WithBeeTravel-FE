{
  "extends": "@withbee/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "assets/*": ["src/assets/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "custom.d.ts", "src/assets/**/*"],
  "exclude": ["node_modules", "dist"]
}
